# Set default line ending handling
* text=auto

# Source files should have LF line endings in repository
*.c text eol=lf
*.h text eol=lf
*.cpp text eol=lf
*.hpp text eol=lf
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.cmake text eol=lf
CMakeLists.txt text eol=lf

# Windows files should have CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.a binary
*.lib binary